{
    "name": "messere/sample-product-cart-api",
    "description": "Sample product / cart application",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Dariusz Sieradzki",
            "email": "opensource@aerolit.pl"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.1",
        "ext-PDO": "*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "esky/enum": "^1.1",
        "ramsey/uuid": "^3.8",
        "sensio/framework-extra-bundle": "^5.2",
        "simple-bus/symfony-bridge": "^5.1",
        "symfony/console": "^4.1",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.1",
        "symfony/yaml": "^4.1"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "behat/symfony2-extension": "^2.1",
        "phpmd/phpmd": "^2.6",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.3",
        "symfony/dotenv": "^4.1",
        "symfony/test-pack": "^1.0",
        "symfony/web-server-bundle": "^4.1",
        "beberlei/assert": "^2.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Messere\\Cart\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Messere\\Cart\\": "tests/unit"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "@init-db"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "tests": [
            "php bin/phpunit",
            "behat"
        ],
        "phpcs": "phpcs --standard=PSR2 src/",
        "phpmd": "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
        "fix": "phpcbf --standard=PSR2 src/",
        "init-db": "php -r \"copy('./doc/db-prototype.db', './var/data.db');\"",
        "check": [
            "@tests",
            "@phpcs",
            "@phpmd"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        }
    }
}
